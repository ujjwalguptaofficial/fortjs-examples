{
    "compilerOptions": {
        "baseUrl": "",
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "sourceMap": true,
        "inlineSources": true,
        "moduleResolution": "node",
        "target": "ES2017",
        "preserveConstEnums": true,
        "module": "CommonJS",
        "lib": [
            "es2015",
            "dom"
        ],
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "~/*": [
                "./*"
            ]
        }
    }
}